{
  "manifest_version": 3,
  "name": "Medusa Eye",
  "version": "1.0",
  "description": "Shuts down the site if you stare too long.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["medusa-eye.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
