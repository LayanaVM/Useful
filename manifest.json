{
  "manifest_version": 3,
  "name": "Word Jumbler Extension",
  "version": "1.0",
  "description": "A simple extension that jumbles letters in words on web pages.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/contentScript.js"]
    }
  ]
}
